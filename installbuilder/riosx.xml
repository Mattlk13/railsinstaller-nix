<project>
    <shortName>riosx</shortName>
    <fullName>RailsInstaller</fullName>
    <version>0.9.5</version>
    <wrapLicenseFileText>0</wrapLicenseFileText>
    <allowLanguageSelection>1</allowLanguageSelection>
    <componentList>
        <component>
            <name>default</name>
            <description>RIX Installer</description>
            <canBeEdited>0</canBeEdited>
            <selected>1</selected>
            <show>0</show>
            <folderList>
                <folder>
                    <description>Uninstaller</description>
                    <destination>/opt/rix</destination>
                    <name>programfiles_installer</name>
                    <platforms>all</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>/opt/rix/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>/opt/rix</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec></windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath></windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
            </folderList>
        </component>
        <component>
            <name>osx_gcc_installer_10_6</name>
            <description>OSX GCC Installer 10.6</description>
            <canBeEdited>0</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>OSX GCC Installer 10.6 pkg http://www.opensource.apple.com/release/developer-tools-41/</description>
                    <destination>/opt/rix/</destination>
                    <name>osx_gcc_installer_pkg</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/opt/rix/GCC-10.6.pkg</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <initializationActionList>
                <actionGroup>
                    <explanation>Checking system</explanation>
                    <actionList>
                        <showWarning>
                            <text>This installer was build only for OSX 10.6, exiting now.</text>
                        </showWarning>
                        <exit>
                            <exitCode>2</exitCode>
                        </exit>
                    </actionList>
                    <ruleList>
                        <compareText>
                            <logic>equals</logic>
                            <negate>1</negate>
                            <text>${osx_major_version}</text>
                            <value>10.6</value>
                        </compareText>
                    </ruleList>
                </actionGroup>
            </initializationActionList>
            <postInstallationActionList>
                <showProgressDialog>
                    <title>Apple Opensource Developer Tools 4.1</title>
                    <actionList>
                        <runProgram>
                            <explanation>Running OSX GCC Installer</explanation>
                            <program>sudo</program>
                            <programArguments>installer -package /opt/rix/GCC-10.6.pkg -target /</programArguments>
                            <ruleList>
                                <platformTest type="osx-intel"/>
                            </ruleList>
                        </runProgram>
                    </actionList>
                </showProgressDialog>
            </postInstallationActionList>
            <postUninstallationActionList>
                <showProgressDialog>
                    <title>Uninstalling Apple Opensource Developer Tools 4.1</title>
                    <actionList>
                        <runProgram>
                            <explanation>Uninstalling OSX GCC Installer</explanation>
                            <program>sudo</program>
                            <programArguments>/Library/Developer/Shared/uninstall-devtools</programArguments>
                            <ruleList>
                                <platformTest type="osx-intel"/>
                            </ruleList>
                        </runProgram>
                    </actionList>
                </showProgressDialog>
            </postUninstallationActionList>
            <shouldPackRuleList>
                <platformTest>
                    <type>osx-intel</type>
                </platformTest>
                <compareValues>
                    <logic>equals</logic>
                    <value1>${osx_target}</value1>
                    <value2>10.6</value2>
                </compareValues>
            </shouldPackRuleList>
        </component>
        <component>
            <name>osx_gcc_installer_10_7</name>
            <description>OSX GCC Installer 10.7-v2</description>
            <canBeEdited>0</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>OSX GCC Installer 10.7-v2 pkg http://www.opensource.apple.com/release/developer-tools-41/</description>
                    <destination>/opt/rix/</destination>
                    <name>osx_gcc_installer_pkg</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/opt/rix/GCC-10.7-v2.pkg</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <initializationActionList>
                <actionGroup>
                    <explanation>Checking system</explanation>
                    <actionList>
                        <showWarning>
                            <text>This installer was build only for OSX 10.7, exiting now.</text>
                        </showWarning>
                        <exit>
                            <exitCode>2</exitCode>
                        </exit>
                    </actionList>
                    <ruleList>
                        <compareText>
                            <logic>equals</logic>
                            <negate>1</negate>
                            <text>${osx_major_version}</text>
                            <value>10.7</value>
                        </compareText>
                    </ruleList>
                </actionGroup>
            </initializationActionList>
            <postInstallationActionList>
                <showProgressDialog>
                    <title>Apple Opensource Developer Tools 4.1</title>
                    <actionList>
                        <runProgram>
                            <explanation>Running OSX GCC Installer</explanation>
                            <program>sudo</program>
                            <programArguments>installer -package /opt/rix/GCC-10.7-v2.pkg -target /</programArguments>
                            <ruleList>
                                <platformTest type="osx-intel"/>
                            </ruleList>
                        </runProgram>
                    </actionList>
                </showProgressDialog>
            </postInstallationActionList>
            <postUninstallationActionList>
                <showProgressDialog>
                    <title>Uninstalling Apple Opensource Developer Tools 4.1</title>
                    <actionList>
                        <runProgram>
                            <explanation>Uninstalling OSX GCC Installer</explanation>
                            <program>sudo</program>
                            <programArguments>/Library/Developer/Shared/uninstall-devtools</programArguments>
                            <ruleList>
                                <platformTest type="osx-intel"/>
                            </ruleList>
                        </runProgram>
                    </actionList>
                </showProgressDialog>
            </postUninstallationActionList>
            <shouldPackRuleList>
                <platformTest>
                    <type>osx-intel</type>
                </platformTest>
                <compareValues>
                    <logic>equals</logic>
                    <value1>${osx_target}</value1>
                    <value2>10.7</value2>
                </compareValues>
            </shouldPackRuleList>
        </component>
        <component>
            <name>JewelryBox</name>
            <description>JewelryBox</description>
            <canBeEdited>0</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>JewelryBox pkg http://jewelrybox.unfiniti.com/</description>
                    <destination>/opt/rix/</destination>
                    <name>JewelryBox_pkg</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/opt/rix/JewelryBox_v1.1.1.pkg</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>/opt/rix/pkg-install</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <postInstallationActionList>
                <showProgressDialog>
                    <title>Installing JewelryBox - The official RVM GUI</title>
                    <actionList>
                        <runProgram>
                            <explanation>Installing JewelryBox - The official RVM GUI</explanation>
                            <program>sudo</program>
                            <programArguments>sh -c "cd /opt/rix ; chmod +x pkg-install ; ./pkg-install JewelryBox_v1.1.1.pkg"</programArguments>
                            <ruleList>
                                <platformTest type="osx-intel"/>
                            </ruleList>
                        </runProgram>
                    </actionList>
                </showProgressDialog>
            </postInstallationActionList>
            <postUninstallationActionList>
                <showProgressDialog>
                    <title>Uninstalling JewelryBox - The official RVM GUI</title>
                    <actionList>
                        <runProgram>
                            <explanation>Uninstalling JewelryBox - The official RVM GUI</explanation>
                            <program>sudo</program>
                            <programArguments>/opt/rix/uninstall_JewelryBox_v1_1_1_pkg.sh</programArguments>
                            <ruleList>
                                <platformTest type="osx-intel"/>
                            </ruleList>
                        </runProgram>
                    </actionList>
                </showProgressDialog>
            </postUninstallationActionList>
            <shouldPackRuleList>
                <platformTest>
                    <type>osx-intel</type>
                </platformTest>
            </shouldPackRuleList>
        </component>
        <component>
            <name>sm_libs</name>
            <description>SM - libs</description>
            <canBeEdited>0</canBeEdited>
            <requiredSize>90</requiredSize>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>SM Files</description>
                    <destination>/opt</destination>
                    <name>sm_files</name>
                    <platforms>all</platforms>
                    <actionList>
                        <substitute>
                            <files>/opt/sm/bin/sm</files>
                            <type>exact</type>
                            <substitutionList>
                                <substitution pattern="#!/bin/zsh" value="#!/opt/sm/pkg/active/bin/zsh"/>
                            </substitutionList>
                        </substitute>
                    </actionList>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/opt/sm</origin>
                            <onPackingFilterList>
                                <fileNameFilter logic="does_not_match" pattern="/opt/sm/src/*;/opt/sm/archives/*;/opt/sm/scm/*"/>
                            </onPackingFilterList>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>SM Config</description>
                    <destination>/etc/profile.d</destination>
                    <name>sm_conf</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/etc/profile.d/sm.sh</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
        </component>
        <component>
            <name>rvm_rubies</name>
            <description>RVM - rubies</description>
            <canBeEdited>0</canBeEdited>
            <requiredSize>250</requiredSize>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>RVM Files</description>
                    <destination>/usr/local</destination>
                    <name>rvm_files</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>/usr/local/rvm</origin>
                            <onPackingFilterList>
                                <fileNameFilter logic="does_not_match" pattern="/usr/local/rvm/repos/*;/usr/local/rvm/archives/*;/usr/local/rvm/src/*"/>
                            </onPackingFilterList>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>RVM Config - loader</description>
                    <destination>/etc/profile.d</destination>
                    <name>rvm_conf_sh</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/etc/profile.d/rvm.sh</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>RVM Config - config</description>
                    <destination>/etc/</destination>
                    <name>rvm_conf_rc</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>/etc/rvmrc</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
        </component>
    </componentList>
    <initializationActionList>
        <setInstallerVariableFromScriptOutput>
            <exec>awk</exec>
            <execArgs>-F: '{if ($3&gt;=500 &amp;&amp; $3&lt;=9999) print $1; }' /etc/passwd</execArgs>
            <name>user_list</name>
            <show>0</show>
            <showMessageOnError>0</showMessageOnError>
            <ruleList>
                <platformTest type="linux"/>
            </ruleList>
        </setInstallerVariableFromScriptOutput>
        <setInstallerVariableFromScriptOutput>
            <exec>sh</exec>
            <execArgs>-c "dscacheutil -q user | awk -F: '{if (\$1 == \"name\") name=\$2 ; if (\$1== \"uid\" &amp;&amp; \$2 &gt; 500) print name;}'|grep -Eo [[:alnum:]_-]+"</execArgs>
            <name>user_list</name>
            <show>0</show>
            <showMessageOnError>0</showMessageOnError>
            <ruleList>
                <platformTest type="osx-intel"/>
            </ruleList>
        </setInstallerVariableFromScriptOutput>
        <setInstallerVariableFromScriptOutput>
            <abortOnError>0</abortOnError>
            <exec>sh</exec>
            <execArgs>-c "who | awk '{print \$1}' | grep -v '^root$' | sort -u"</execArgs>
            <name>logged_in</name>
        </setInstallerVariableFromScriptOutput>
        <setInstallerVariableFromScriptOutput>
            <abortOnError>0</abortOnError>
            <exec>sh</exec>
            <execArgs>-c "who | awk '{print \$1}' | grep -v '^root$' | head -n 1"</execArgs>
            <name>selected_user</name>
        </setInstallerVariableFromScriptOutput>
        <setInstallerVariableFromScriptOutput>
            <abortOnError>0</abortOnError>
            <exec>sh</exec>
            <execArgs>-c "who | awk '{print \$1}' | grep -v '^root$' | sort -u | wc -l"</execArgs>
            <name>logged_in_count</name>
        </setInstallerVariableFromScriptOutput>
        <setInstallerVariableFromScriptOutput>
            <abortOnError>0</abortOnError>
            <exec>sudo</exec>
            <execArgs>su ${selected_user} -c "git config --global user.name"</execArgs>
            <name>git_username</name>
            <showMessageOnError>0</showMessageOnError>
            <ruleList>
                <compareValues>
                    <logic>equals</logic>
                    <value1>${logged_in_count}</value1>
                    <value2>1</value2>
                </compareValues>
            </ruleList>
        </setInstallerVariableFromScriptOutput>
        <setInstallerVariableFromScriptOutput>
            <abortOnError>0</abortOnError>
            <exec>sudo</exec>
            <execArgs>su ${selected_user} -c "git config --global user.email"</execArgs>
            <name>git_email</name>
            <showMessageOnError>0</showMessageOnError>
            <ruleList>
                <compareValues>
                    <logic>equals</logic>
                    <value1>${logged_in_count}</value1>
                    <value2>1</value2>
                </compareValues>
            </ruleList>
        </setInstallerVariableFromScriptOutput>
        <consoleWrite>
            <text>Found users:${user_list}:
Logged in users:${logged_in}:
Selected:${selected_user}: count:${logged_in_count}:
</text>
        </consoleWrite>
    </initializationActionList>
    <preInstallationActionList>
        <addGroup>
            <abortOnError>1</abortOnError>
            <groupname>rvm</groupname>
        </addGroup>
    </preInstallationActionList>
    <postInstallationActionList>
        <runProgram>
            <explanation>Setting git user name</explanation>
            <program>sudo</program>
            <programArguments>su ${selected_user} -c "git config --global user.name \"${git_username}\""</programArguments>
        </runProgram>
        <runProgram>
            <explanation>Setting git user email</explanation>
            <program>sudo</program>
            <programArguments>su ${selected_user} -c "git config --global user.email \"${git_email}\""</programArguments>
        </runProgram>
        <foreach values="${user_list}" variables="user_name">
            <actionList>
                <addGroupToUser>
                    <abortOnError>0</abortOnError>
                    <groupname>rvm</groupname>
                    <showMessageOnError>0</showMessageOnError>
                    <username>${user_name}</username>
                    <onErrorActionList>
                        <consoleWrite>
                            <text>Could not add user '${user_name}' to group 'rvm'.
</text>
                        </consoleWrite>
                    </onErrorActionList>
                </addGroupToUser>
            </actionList>
        </foreach>
    </postInstallationActionList>
    <preUninstallationActionList>
        <showChoiceQuestion>
            <defaultValue>Yes</defaultValue>
            <explanation>OSX GCC Installer was installed as part of Rails Installer for OSX, please select if you want ot remove it now.

Note that any Xcode installations are handled by the same uninstaller and will be also removed.</explanation>
            <text>Do you want to uninstall OSX GCC Installer ?</text>
            <title>Uninstall OSX GCC Installer ?</title>
            <variable>uninstall_osx_gcc_installer</variable>
            <optionList>
                <option>
                    <description>This will remove OSX GCC Installer and any Xcode installations</description>
                    <image></image>
                    <text>Yes</text>
                    <value>1</value>
                </option>
                <option>
                    <description>This will leave OSX GCC Installer on your disk </description>
                    <image></image>
                    <text>No</text>
                    <value>0</value>
                </option>
            </optionList>
            <ruleList>
                <platformTest type="osx-intel"/>
            </ruleList>
        </showChoiceQuestion>
    </preUninstallationActionList>
    <compressionAlgorithm>lzma</compressionAlgorithm>
    <defaultUnixDirectoryPermissions>775</defaultUnixDirectoryPermissions>
    <defaultUnixFilePermissions>664</defaultUnixFilePermissions>
    <defaultUnixGroup>rvm</defaultUnixGroup>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <requireInstallationByRootUser>1</requireInstallationByRootUser>
    <uninstallerDirectory>/opt/rix</uninstallerDirectory>
    <vendor>Rails Installer</vendor>
    <parameterList>
        <parameterGroup>
            <name>git_configuration</name>
            <title>Git configuration</title>
            <explanation>Please enter full name and email address for use in git</explanation>
            <value></value>
            <default></default>
            <parameterList>
                <choiceParameter>
                    <name>selected_user</name>
                    <description>Select user</description>
                    <explanation></explanation>
                    <value></value>
                    <default>${selected_user}</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <displayType>combobox</displayType>
                    <ordering>default</ordering>
                    <width>30</width>
                    <preShowPageActionList>
                        <removeChoiceOptions name="selected_user">
                            <options></options>
                        </removeChoiceOptions>
                        <setInstallerVariable name="choiceText" value=""/>
                        <foreach values="${logged_in}" variables="user_name">
                            <actionList>
                                <setInstallerVariable name="choiceText" value="${choiceText}&#xA;${user_name}=${user_name}"/>
                            </actionList>
                        </foreach>
                        <addChoiceOptionsFromText>
                            <name>selected_user</name>
                            <text>${choiceText}</text>
                        </addChoiceOptionsFromText>
                    </preShowPageActionList>
                    <ruleList>
                        <compareValues>
                            <logic>does_not_equal</logic>
                            <value1>${logged_in_count}</value1>
                            <value2>1</value2>
                        </compareValues>
                    </ruleList>
                </choiceParameter>
                <stringParameter>
                    <name>git_username</name>
                    <description>Full name</description>
                    <explanation></explanation>
                    <value></value>
                    <default></default>
                    <allowEmptyValue>1</allowEmptyValue>
                    <width>30</width>
                </stringParameter>
                <stringParameter>
                    <name>git_email</name>
                    <description>Email</description>
                    <explanation></explanation>
                    <value></value>
                    <default></default>
                    <allowEmptyValue>1</allowEmptyValue>
                    <width>30</width>
                </stringParameter>
            </parameterList>
            <postShowPageActionList>
                <consoleWrite>
                    <text>Git - selected_user:${selected_user}: git_username:${git_username}: git_email:${git_email}:
</text>
                </consoleWrite>
            </postShowPageActionList>
        </parameterGroup>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <shortName>RailsInstaller</shortName>
            <installerFilename>${product_shortname}-${product_version}-${platform_name}-${osx_target}-installer.${platform_exec_suffix}</installerFilename>
            <platform>osx</platform>
        </platformOptions>
        <platformOptions>
            <shortName>RailsInstaller</shortName>
            <platform>linux</platform>
        </platformOptions>
    </platformOptionsList>
</project>

