#!/bin/sh

sm()
{
  env -i "${__initial_env[@]}" PATH="/opt/sm/bin:/opt/sm/pkg/active/bin:/opt/sm/pkg/active/sbin:$PATH" /opt/sm/bin/sm $@
}

rix.sm.install.set()
{
  sm set install $1
}

rix.sm.install.pkg()
{
  local name
  name=$1
  shift
  sm $name install "$@"
}

rix.sm.install()
{
  local log_step_message
  log step "install sm"
  export install_path sm_shell
  install_path=/opt/sm
  sm_shell=zsh
  install_sm >$logs/install_sm 2>&1
  PATH=/opt/sm/bin:$PATH
  log_step_message="install sm" #TODO: fix log_step to allow building trees
  log step success
}
